{
  "manifest_version": 3,
  "name": "Redline",
  "description": "Annotate pages with rectangles and text callouts, then save a local feedback screenshot.",
  "version": "0.1.0",
  "permissions": ["activeTab", "scripting", "nativeMessaging"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Toggle Redline Annotation"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle Redline annotation mode"
    }
  }
}
